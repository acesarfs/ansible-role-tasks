    $stmt->bindParam( ':jobid', $jobid, PDO::PARAM_INT);
    $stmt->bindParam( ':pages', $pages, PDO::PARAM_INT );
    $stmt->bindParam( ':status', $status );
    $stmt->bindParam( ':updated_at', $updated_at );
    $stmt->execute();
    exit(0);
}
else {
