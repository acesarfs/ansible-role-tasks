/* Atualiza status */
$sql = "UPDATE printings SET pages=:pages, status=:status, updated_at=:updated_at WHERE jobid=:jobid";
$updated_at = date("Y-m-d H:i:s");

if($pode == 'sim') {
    $status = 'Fila';
